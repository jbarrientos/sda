@model IEnumerable<SDA.WebApp.Models.DetalleContingente>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.tipo.nombre</h2>
<h3>@ViewBag.tratado.nombre</h3>

<p>
    @Html.ActionLink("Regresar", "Index", "Contingente", new { tratadoId = ViewBag.contingente.tratadoId },
    new { @class = "btn btn-default btn-sm" })
</p>

<table class="table table-bordered table-hover" id="tabla">
    <thead>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.anio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.monto)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.volumenNuevo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaInicioSolicitudes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaFinSolicitudes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.anio)
                </td>
                <td style="text-align:right">
                    @Html.DisplayFor(modelItem => item.monto)
                </td>

                <td style="text-align:right">
                    @Html.DisplayFor(modelItem => item.volumenNuevo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fechaInicioSolicitudes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fechaFinSolicitudes)
                </td>
                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = item.detalleContingenteId }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Solicitudes", "Index", "Solicitud", new { detalleContingenteId = item.detalleContingenteId }, new { @class = "btn btn-success btn-sm" })
                    @Html.ActionLink("Aduana", "Index", "HeaderAduana", new { detalleContingenteId = item.detalleContingenteId }, new { @class = "btn btn-warning btn-sm" })

                </td>
            </tr>
        }
    </tbody>

</table>
@section scripts{
    <script type="text/javascript" language="javascript" src="//cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" language="javascript" src="//cdn.datatables.net/plug-ins/be7019ee387/integration/bootstrap/3/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tabla').dataTable({
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registros por pagina",
                    "zeroRecords": "No se encontro ningun registro - lo sentimos",
                    "info": "Mostrando pagina _PAGE_ de _PAGES_",
                    "infoEmpty": "No hay registros",
                    "infoFiltered": "(filtrado desde _MAX_ total de registros)",
                    "search": "Buscar",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });
        });
    </script>
}




