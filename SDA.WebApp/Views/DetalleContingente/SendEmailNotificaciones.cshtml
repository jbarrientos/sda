@model SDA.WebApp.Models.DetalleContingente
@{
    ViewBag.Title = "Envio de notificaciones";
}

<h2>Envio de correo de notificación de asignación - @Model.Contingente.TipoContingente.nombre - @Model.anio</h2>
<hr />
@using (Html.BeginForm())
{

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-horizontal">
        <div class="well well-lg">
            Para enviar correo a todas las solicitudes del contingente @Model.Contingente.TipoContingente.nombre correspondiente al año
            @Model.anio de click al botón
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.detalleContingenteId)

        <div class="form-group">
            
                <input type="submit" value="Enviar correos" class="btn btn-primary btn-lg" />
                @Html.ActionLink("Cancelar", "Index", "Solicitud", new { detalleContingenteId = Model.detalleContingenteId },
                new { @class = "btn btn-default btn-lg" })
            
        </div>
    </div>
}




