@model SDA.WebApp.ViewModels.AddFraccionTipoContingente

@{
    ViewBag.Title = "AddFraccion";
}

<h2>Asociar fracción a Tipo de Contingente</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.LabelFor(model => model.SelectedFraccionId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedFraccionId,
               new SelectList(ViewBag.fracciones, "FraccionId", "DisplayName"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedFraccionId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Cancelar", "Index", new { tipoContingenteId = Model.tipoContingenteId })
</div>
