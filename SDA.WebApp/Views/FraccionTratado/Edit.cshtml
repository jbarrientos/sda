@model SDA.WebApp.Models.FraccionTratado

@{
    ViewBag.Title = "Editar";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@ViewBag.fraccion.DisplayName - @ViewBag.categoria.nombre</h4>
        <h3>@ViewBag.tratado.nombre</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.fraccionTratadoId)
        @Html.HiddenFor(model => model.categoriaId)
        @Html.HiddenFor(model => model.fraccionId)
        @Html.HiddenFor(model => model.tratadoId)


        <div class="form-group">
            @Html.LabelFor(model => model.arancel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.arancel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.arancel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.excluido, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.excluido)
                    @Html.ValidationMessageFor(model => model.excluido, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "IndexFracciones", "Categoria", new { id = Model.categoriaId}, new { @class = "btn btn-default" })
</div>
