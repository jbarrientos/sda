@model IEnumerable<SDA.WebApp.ViewModels.IndexLicenciasViewModel>

@{
    ViewBag.Title = "Index";
}

<h3>Solicitud y control de licencias de importación</h3>
<h4>@ViewBag.tipo.nombre @ViewBag.periodo</h4>
<h5></h5>

<p>
    @Html.ActionLink("Solicitar Licencia", "Solicitar", new { solicitudId = ViewBag.solicitud.Id }, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover" id="tabla">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.acuerdo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.licenciaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaAcuerdo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaVencimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Volumen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VolumenImportado)
            </th>
            
            
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @*@Html.DisplayFor(modelItem => item.codigo)*@
                    --
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.acuerdo)*@
                    --
                </td>
                <td style="text-align:right">@Html.DisplayFor(modelItem => item.Id)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaAcuerdo)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.FechaVencimiento)
                </td>
                <td style="text-align:right">
                    @Html.DisplayFor(modelItem => item.Volumen)
                </td>
                <td style="text-align:right">
                    @Html.DisplayFor(modelItem => item.VolumenImportado)
                </td>
                
             
                

            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script type="text/javascript" language="javascript" src="//cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" language="javascript" src="//cdn.datatables.net/plug-ins/be7019ee387/integration/bootstrap/3/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tabla').dataTable({
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registros por pagina",
                    "zeroRecords": "No se encontro ningun registro - lo sentimos",
                    "info": "Mostrando pagina _PAGE_ de _PAGES_",
                    "infoEmpty": "No hay registros",
                    "infoFiltered": "(filtrado desde _MAX_ total de registros)",
                    "search": "Buscar",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });
        });
    </script>
}
