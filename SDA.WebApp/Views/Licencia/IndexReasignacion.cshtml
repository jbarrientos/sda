@model IEnumerable<SDA.WebApp.ViewModels.IndexLicenciasViewModel>

@{
    ViewBag.Title = "IndexReasignacion";
}

<h2>Licencias (Reasignación) - @ViewBag.importador.nombre</h2>

<p>
    @if (ViewBag.solicitud.SaldoReasignacion > 0.00)
    {
        @Html.ActionLink("Nueva Licencia", "CreateReasignacion", new { solicitudId = ViewBag.solicitud.Id }, new { @class = "btn btn-primary" })
    }
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.acuerdo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaVencimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Volumen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observaciones)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.acuerdo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaVencimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Volumen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Observaciones)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new { @class="btn btn-success"}) 
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class="btn btn-warning"}) 
            @Html.ActionLink("Imprimir", "Print", new { licenciaId = item.Id }, new { @class = "btn btn-info" })
            
        </td>
    </tr>
}

</table>
