@model SDA.WebApp.ViewModels.UploadLicenciaViewmodel
@{
    ViewBag.Title = "UploadSigned";
}

<h2>Subir Licencia Firmada para el importador @Model.Licencia.solicitud.contribuyente.nombre</h2>
<hr />
@using (Html.BeginForm("UploadSigned", "Licencia",
                                        FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-horizontal">
        <h4>Por favor llenar los siguientes campos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Licencia.LicenciaFirmada)
            <input name="documento" type="file" class="form-control btn btn-success" />
            @Html.ValidationMessageFor(model => model.Licencia.LicenciaFirmada, "",
               new { @class = "text-danger" })
        </div>
        


        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Licencia.licenciaId)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Subir Licencia firmada" class="btn btn-primary" />
            </div>
        </div>
    </div>



}

<div>
    @Html.ActionLink("Cancelar", "Index", new { solicitudId = Model.Licencia.solicitudId },
    new { @class = "btn btn-default" })
</div>

