@model SDA.WebApp.ViewModels.SubastaFormViewModel
@{
    ViewBag.Title = "Solicitud Subasta";
}

<h2>@Model.Detalle.ContingenteVario.TipoContingente.nombre - @Model.Detalle.ContingenteVario.Anio</h2>
<h3>Importador: @Model.Detalle.Contribuyente.nombre - @Model.Detalle.Contribuyente.nit</h3>
<h4>Exprese el volumen en @Model.Detalle.ContingenteVario.TipoContingente.UnidadMedida.nombre</h4>

@using (Html.BeginForm("SaveSubasta","Solicitud"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
        <div class="form-group">
            @Html.LabelFor(model => model.Solicitud.volumenAsignado, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Solicitud.volumenAsignado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Solicitud.volumenAsignado, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Solicitud.CertificadoExportacion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Solicitud.CertificadoExportacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Solicitud.CertificadoExportacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Solicitud.FechaCertificado, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Solicitud.FechaCertificado,
               new { htmlAttributes = new { @class = "form-control date-picker" } })
                @Html.ValidationMessageFor(model => model.Solicitud.FechaCertificado, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
                @Html.LabelFor(model => model.Solicitud.comentarios, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Solicitud.comentarios,
                   new { @class = "form-control", @rows = 4 })
                    @Html.ValidationMessageFor(model => model.Solicitud.comentarios, "", new { @class = "text-danger" })
                </div>
        </div>
        @Html.HiddenFor(m => m.Solicitud.solicitudId)
        

        @Html.Hidden("detalleId", Model.Detalle.Id)

        <div class="form-group">
            <div class="col-md-10 pull-right">
                <input type="submit" value="Enviar Solicitud" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "IndexCertificados", "Solicitud", new { id = Model.Detalle.Id }, new { @class = "btn btn-default" })
</div>



